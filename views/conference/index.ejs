<!doctype html>
<html>
    <%- include('../partials/head') %>
    <body>
        <div class="container">
            <%- include('../partials/flash') %>
            <%- include('../partials/navbar') %>
            <div class="col-md-12">
                <h1>
                    Conference Details
                     <% if(privilege.toLowerCase() == "tpc chair" || privilege.toLowerCase() == "admin") { %>
                        <a href="/conferences/<%= conference.id %>/edit" style="font-size: 14px;">Edit</a>
                    <% } %>
                </h1> <span class="label label-info"><%= privilege %></span>
                <h3>
                    <%= conference.name %>  
                </h3>
                <h4><%= new Date(conference.startDate).toLocaleString() %> -  <%= new Date(conference.endDate).toLocaleString() %></h4>
                <br>
                <br>
                <h2>Tracks</h2>
                <table class="table table-striped table-bordered" id="trackTable"></table>
            </div>
        </div>
        <%- include('../partials/scripts') %>
        <script>
             
             var trackTable = $('#trackTable').dataTable({
              "bProcessing" : true,
              "bServerSide" : true,
              "ajax" : { 
                  url: '/datatables/tracks', 
                  data: {
                      "cid": "<%=conference.id%>"
                  }
              },
		      "columns" : [
    		    { data : "_id",
    		      title: "Track ID",
    		      render: function(data, type, row, meta) {
    		          return "<a href=/conferences/<%= conference.id %>/tracks/" + data + ">" + data + "</a>";
    		      }  
    		    },
    		    { data : "name",
    		      title: "Name"},
    		    { data : "cid",
    		      title: "Conference ID",
    		      render: function(data, type, row, meta) {
    		          return "<a href=/conferences/" + data + ">" + data + "</a>"
    		      } 
    		    }
		      ]
            });
        </script>
    </body>
</html>