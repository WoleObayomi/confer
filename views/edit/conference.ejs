<!doctype html>
<html>
    <%- include('../partials/head') %>
    <body>

        <div class="container" style="height: 100vh;">
            <%- include('../partials/flash') %>
                <div class="col-md-12">
                <form>
                    <h2>Edit Conference</h2>
                    <div class="form-group row">
                        <label for="name" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10 col-md-6">
                            <input type="name" class="form-control" id="name" name="name" placeholder="Name" value=<%=conference.firstname%>>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="startDate" class="col-sm-2 control-label">Start Date</label>
                        <div class="col-sm-10 col-md-6">
                            <input type="date" form-control id="startDate" name="startDate" value="<%=conference.startDate%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="endDate" class="col-sm-2 control-label">endDate</label>
                        <div class="col-sm-10 col-md-6">
                            <input type="date" class="form-control" id="endDate" name="endDate" value="<%=conference.endDate%>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <%- include('../partials/scripts') %>
        <script>
            $("form").submit(function(e){
                e.preventDefault();
                var data = $("form").serializeArray();
                
                $.ajax({
                    method:"POST",
                    url: "/admin/conferences/"+"<%=conference.id%>"+"/edit",
                    data: data
                }).then(function(response){
                    document.location.href = response.target;
                })
                
            })
        </script>
    </body>
</html>